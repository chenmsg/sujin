
@{
    ViewBag.Title = "用户管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int state = TQuery.GetInt("state");
    string msg =TQuery.GetString("msg");
    string url = TQuery.GetString("url");
}
<!-- Button trigger modal -->
@*<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
    Launch demo modal
</button>*@

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" style="width:560px;" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">提示</h4>
            </div>
            <div class="modal-body">
                @if (state == 0)
                {
                    <div class="alert alert-success" role="alert">@Html.Raw( msg)</div>
                }
                else
                {
                    <div class="alert alert-danger" role="alert">@Html.Raw(msg)</div>
                }
            </div>
            <div class="modal-footer">
                @*<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>*@
                <button type="button" class="btn btn-primary" >确定</button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $('#myModal').modal({
        show: true
    })
    $('#myModal').on('hidden.bs.modal', function (e) {
        window.location.href = '@(url)';
    })
    $('.btn-primary').click(function () {
        window.location.href = '@(url)';
    })
</script>